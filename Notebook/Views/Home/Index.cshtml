@model IEnumerable<Notebook.Models.Contact>

@{
    ViewBag.Title = "Index";
}

<h2>Телефонный справочник</h2>

<p>
    @Html.ActionLink("Создать запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Contact", "Ф.И.О.")
        </th>
        <th>
            @Html.Label("Contact", "Номер телефона")
        </th>
        <th>
            @Html.Label("Category", "Категория")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
